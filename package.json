{
  "name": "@prantlf/semidown",
  "version": "4.0.0",
  "description": "Semi-incremental markdown parser and renderer, optimized for LLM output.",
  "author": "Chuanqisun Sun <chuanqi.sun.dev@gmail.com> (https://github.com/chuanqisun)",
  "contributors": [
    "Ferdinand Prantl <prantlf@gmail.com> (http://prantl.tk)"
  ],
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/prantlf/semidown/blob/master/LICENSE"
    }
  ],
  "homepage": "http://github.com/prantlf/semidown/",
  "repository": {
    "type": "git",
    "url": "https://github.com/prantlf/semidown.git"
  },
  "bugs": {
    "url": "http://github.com/prantlf/semidown/issues"
  },
  "type": "module",
  "files": [
    "dist",
    "lib"
  ],
  "types": "dist/index.d.ts",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./core": {
      "types": "./dist/index-core.d.ts",
      "import": "./dist/index-core.js",
      "require": "./dist/index-core.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && rollup -c && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "@shikijs/transformers": "^3.20.0",
    "@types/node": "^25.0.3",
    "marked": "^17.0.1",
    "marked-shiki": "^1.2.1",
    "shiki": "^3.20.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "chart.js": "^4.5.1",
    "rollup": "^4.54.0",
    "rollup-plugin-dts": "^6.3.0",
    "rollup-plugin-rm": "^1.0.2",
    "tslib": "^2.8.1",
    "typescript": "~5.9.3",
    "vite": "^7.3.0"
  },
  "keywords": [
    "markdown",
    "markup",
    "html",
    "partial",
    "streaming"
  ]
}