{
  "name": "semidown",
  "version": "0.0.3",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && rollup -c && vite build",
    "preview": "vite preview"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./core": {
      "types": "./dist/index-core.d.ts",
      "import": "./dist/index-core.js",
      "require": "./dist/index-core.cjs"
    }
  },
  "files": [
    "dist",
    "lib",
    "src/main.ts",
    "src/style.css",
    "README.md",
    "CHANGELOG.md"
  ],
  "types": "dist/index.d.ts",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "chart.js": "^4.5.1",
    "rollup": "^4.53.3",
    "rollup-plugin-dts": "^6.3.0",
    "rollup-plugin-rm": "^1.0.2",
    "tslib": "^2.8.1",
    "typescript": "~5.9.3",
    "vite": "^7.2.4"
  },
  "dependencies": {
    "@shikijs/transformers": "^3.17.0",
    "@types/node": "^24.10.1",
    "marked": "^17.0.1",
    "marked-shiki": "^1.2.1",
    "shiki": "^3.17.0"
  }
}
